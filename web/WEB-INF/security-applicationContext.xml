<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:security="http://www.springframework.org/schema/security"       
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       					   http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://www.springframework.org/schema/security
                           http://www.springframework.org/schema/security/spring-security-2.0.4.xsd">

    <security:global-method-security secured-annotations="enabled" />
 
    <security:http auto-config="true">
    	<security:form-login login-page="/login.jsp" always-use-default-target="true" default-target-url="/dashboard.mvc" />
    	<security:intercept-url pattern="/login.jsp" access="IS_AUTHENTICATED_ANONYMOUSLY" />
        <security:intercept-url pattern="/yui/**" filters="none" />
        <security:intercept-url pattern="/theme/**" filters="none" />
        <security:intercept-url pattern="/**" access="ROLE_USER" />
    </security:http>
 
	<security:authentication-provider>
		<security:jdbc-user-service data-source-ref="dataSource" />		
	</security:authentication-provider>
</beans>